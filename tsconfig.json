{
  "compilerOptions": {
    "target": "ES5",
    "baseUrl": "./src",
    "lib": ["es2017", "es7", "es6", "dom"],
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist",
    "rootDirs": ["./src", "./tests"],
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"],
  "exclude": ["node_modules"]
}
